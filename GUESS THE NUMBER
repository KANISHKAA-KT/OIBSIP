import java.util.Scanner;
import java.util.Random;

public class GuessTheNumber {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        int totalScore = 0;
        int round = 1;

        System.out.println("üéØ Welcome to the Guess the Number Game!");
        System.out.println("You have to guess a number between 1 and 100.");
        System.out.println("You'll get points based on how quickly you guess correctly.\n");

        String playAgain;

        do {
            int numberToGuess = random.nextInt(100) + 1; // Random number between 1-100
            int attemptsLeft = 5; // Limit attempts
            int points = 50; // Start score for this round
            boolean hasGuessedCorrectly = false;

            System.out.println("üîÑ Round " + round + " starts! You have 5 attempts.");

            while (attemptsLeft > 0) {
                System.out.print("Enter your guess: ");
                int userGuess = scanner.nextInt();

                if (userGuess == numberToGuess) {
                    System.out.println("üéâ Correct! You guessed the number.");
                    System.out.println("You scored " + points + " points this round.");
                    totalScore += points;
                    hasGuessedCorrectly = true;
                    break;
                } else if (userGuess > numberToGuess) {
                    System.out.println("üìâ Too high! Try again.");
                } else {
                    System.out.println("üìà Too low! Try again.");
                }

                attemptsLeft--;
                points -= 10; // Deduct points for wrong attempt

                if (attemptsLeft > 0) {
                    System.out.println("Attempts left: " + attemptsLeft);
                } else {
                    System.out.println("‚ùå No attempts left! The number was: " + numberToGuess);
                }
            }

            System.out.println("‚≠ê Total Score: " + totalScore);

            System.out.print("Do you want to play another round? (yes/no): ");
            playAgain = scanner.next().toLowerCase();
            round++;

        } while (playAgain.equals("yes"));

        System.out.println("\nüèÜ Game Over! Your final score: " + totalScore);
        System.out.println("Thanks for playing!");
        scanner.close();
    }
}
