import java.util.Scanner;

public class ATM {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Hardcoded UserID and PIN
        String userID = "user123";
        String userPIN = "4567";

        System.out.println("============================");
        System.out.println("ğŸ§ Welcome to Java ATM ğŸ§");
        System.out.println("============================");

        // Prompt user for login
        System.out.print("Enter User ID: ");
        String inputUserID = sc.nextLine().trim(); // Remove spaces

        System.out.print("Enter User PIN: ");
        String inputUserPIN = sc.nextLine().trim(); // Remove spaces

        // Check credentials
        if (inputUserID.equalsIgnoreCase(userID) && inputUserPIN.equals(userPIN)) {
            System.out.println("âœ… Login Successful! ğŸ‰");
            // Call main menu function
            showMenu();
        } else {
            System.out.println("âŒ Invalid User ID or PIN. Please try again.");
        }
    }

    static void showMenu() {
        System.out.println("\n===== Main Menu =====");
        System.out.println("1. ğŸ“ View Transaction History");
        System.out.println("2. ğŸ’¸ Withdraw");
        System.out.println("3. ğŸ’° Deposit");
        System.out.println("4. ğŸ” Transfer");
        System.out.println("5. ğŸšª Quit");
        System.out.println("======================");
        // You can add more functionality here
